
package Hooks;

import java.util.concurrent.TimeUnit;

import org.openqa.selenium.By;
import org.openqa.selenium.OutputType;
import org.openqa.selenium.TakesScreenshot;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.chrome.ChromeDriver;

import cucumber.api.Scenario;
import cucumber.api.java.After;
import cucumber.api.java.Before;
import io.github.bonigarcia.wdm.WebDriverManager;

public class hook {
	public static WebDriver driver;
    
	@Before
	public void broweserLaunch() throws Throwable {
		 	
           WebDriverManager.chromedriver().setup();
		   driver = new ChromeDriver();
			driver.get("https://howzu.appkodes.in/web");
			String failed = driver.getCurrentUrl();
			Thread.sleep(3000);
			driver.findElement(By.xpath("//a[contains(@class,'btnsWelcome border-radius')]")).click();
			if(failed.equals("https://howzu.appkodes.in/web")) {
				
				driver.findElement(By.xpath("//div[@id='welcome']/following-sibling::a[1]")).click();

			}
		  	driver.manage().window().maximize();
		  	driver.manage().timeouts().implicitlyWait(10, TimeUnit.SECONDS);
		 }
@After
public void afterscenario(Scenario scenario) {
		
		boolean failed = scenario.isFailed();
		if(failed) {
			byte[] screenshot = ((TakesScreenshot) driver).getScreenshotAs(OutputType.BYTES);
			scenario.embed(screenshot, "image/png");

		}
	        driver.quit();
	}
	
}
